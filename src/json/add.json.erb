{
  "title": "add_Personal rules1 (@sisui)_ver2",
  "rules": [
    {
      "description": "LeftAlt + o_Save_ver2",
      "manipulators":
      <%=
               each_key(
                 source_keys_list: ["o"],
                 dest_keys_list: ["left_alt"],
                 from_mandatory_modifiers: ["left_alt"],
                 to_if_alone: ["key_code": "s","modifiers": ["left_command"]],
                 as_json: true
               )
       %>        
    },
      {
      "description": "LeftCommand + o_VSCODE横2画面へ",
      "manipulators":
      <%=
               each_key(
                 source_keys_list: ["o"],
                 from_mandatory_modifiers: ["left_control"],
                 from_optional_modifiers: ["any"],
                 dest_keys_list: ["o"],
                 to_modifiers: ["left_control","left_shift"],
                 to_if_alone: ["key_code": "left_control"],                 
                 as_json: true
               )
       %>
    },
    {
      "description": "RightCommand + I_FocusNeighboringGroup",
      "manipulators":
      <%=
               each_key(
                 source_keys_list: ["i"],
                 from_mandatory_modifiers: ["right_gui"],
                 from_optional_modifiers: ["any"],
                 dest_keys_list: ["i"],
                 to_modifiers: ["right_gui","right_alt"],                 
                 as_json: true
               )
       %>
    },
    {
      "description": "LeftCommand + H_VSCODE1画面へ",
      "manipulators":
      <%=
               each_key(
                 source_keys_list: ["h"],
                 from_mandatory_modifiers: ["left_gui"],
                 dest_keys_list: ["h"],
                 to_modifiers: ["right_control","left_shift"],                 
                 as_json: true
               )
       %>
    }
      ]
}