{
  "title": "AppsSelect-Previous-next.json.erb (@sisui)",
  "rules": [
    {
      "description": "LeftCommand + ,comma__AppsSelect-Previous",
      "manipulators":
      <%# toに次のコードを手動で入れる必要あり、"halt": true, %>
      <%=
               each_key(
                 source_keys_list: ["comma"],
                 from_mandatory_modifiers: ["left_control"],
                 dest_keys_list: ["tab"],
                 to_modifiers: ["right_gui","left_shift"],
                 to_if_alone: [{"key_code": "left_control"}],
                 as_json: true
               )
       %>
    },
    {
      "description": "LeftCommand + .__AppsSelect-next",
      "manipulators":
      <%# toに次のコードを手動で入れる必要あり、"halt": true, %>      
      <%=
               each_key(
                 source_keys_list: ["period"],
                 from_mandatory_modifiers: ["left_control"],
                 dest_keys_list: ["tab"],
                 to_modifiers: ["right_gui"],
                 to_if_alone: [{"key_code": "left_control"}],
                 as_json: true
               )
       %>
    }
    ]
}