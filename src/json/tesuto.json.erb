{
    "title": "TesutoCase7",
    "rules": [
    {
      "description": "tesuto",
      "manipulators": [
        {
          <%# Control-A to Command-B %>
          "type": "basic",
          "from": <%= from("a", ["control"], ["caps_lock"]) %>,
          "to": <%= to([["b", ["command"]]]) %>
        },
        {
          <%# Control-C to D %>
          "type": "basic",
          "from": <%= from("c", ["control"], ["any"]) %>,
          "to": <%= to([["d"]]) %>
        }
      ]
    },
    {
      "description": "tesuto2",
      "manipulators": [
        {
          <%# Control-E to F %>
          "type": "basic",
          "from": <%= from("e", ["control"], []) %>,
          "to": <%= to([["f"]]) %>
        }
      ]
    },
        {
            "description": "Sキーを押しながらHキーを押すと左矢印に変換するという設定",
            "_comment": "Sキーを押しながらHキーを押すと左矢印に変換するという設定 ",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "s",
                        "modifiers": {
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "vi_mode",
                                "value": 1
                            }
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "vi_mode",
                                "value": 0
                            }
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "vi_mode",
                            "value": 1
                        }
                    ]
                }
            ]
        },
        {
            "description": "１秒間押し続けないとcommand-qが実行されない設定",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "q",
                        "modifiers": {
                            "mandatory": [
                                "command"
                            ],
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "parameters": {
                        "basic.to_if_held_down_threshold_milliseconds": 1000
                    },
                    "to_if_held_down": [
                        {
                            "key_code": "q",
                            "modifiers": [
                                "command"
                            ],
                            "repeat": false
                        }
                    ]
                }
            ]
        },
        {
            "description": "１秒間押し続けないとaが実行されない設定",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "a",
                        "modifiers": {
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "parameters": {
                        "basic.to_if_held_down_threshold_milliseconds": 1000
                    },
                    "to_if_held_down": [
                        {
                            "key_code": "a",
                            "repeat": false
                        }
                    ]
                }
            ]
        },
        {
            "description": "１秒間押し続けないとspaceが実行されない設定",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": {
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "parameters": {
                        "basic.to_if_held_down_threshold_milliseconds": 1000
                    },
                    "to_if_held_down": [
                        {
                            "key_code": "spacebar",
                            "repeat": false
                        }
                    ]
                }
            ]
        },
{
  "description": "無変換/英数 + 「スペース/かな」で「Return/Escape」",
  "manipulators": [
    {
      "type": "basic",
      "from": {
        "key_code": "spacebar",
        "modifiers": {
          "mandatory": [ "fn" ]
        }
      },
      "to": [
        { "key_code": "return_or_enter" }
      ]
    },
    {
      "type": "basic",
      "from": {
        "key_code": "fn",
        "modifiers": {
          "optional": [ "caps_lock" ]
        }
      },
      "to": [
        { "key_code": "fn" }
      ],
      "to_if_alone": [
        { "key_code": "a" }
      ]
    }
  ]
}
