{
  "title": "FrontmostIfMail",
  "rules": [
    {
      "description": "LeftOption + F_フラグを切り替える(mail)",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("f", ["left_option"], ["caps_lock"]) %>,
          "to": <%= to([["l", ["left_shift", "right_gui"]]]) %>,
          "conditions": [ <%= frontmost_application_if("mail") %> ]
        }
      ]
    },
    {
      "description": "LeftCommand + Z_新規メールをすべて受信(mail)",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("z", ["left_control"], ["caps_lock"]) %>,
          "to": <%= to([["n", ["left_shift", "right_gui"]]]) %>,
          "conditions": [ <%= frontmost_application_if("mail") %> ]
        }
      ]
    },
    {
      "description": "RightOption + S_送信(mail)",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("s", ["right_option"], ["caps_lock"]) %>,
          "to": <%= to([["d", ["left_shift", "right_gui"]]]) %>,
          "conditions": [ <%= frontmost_application_if("mail") %> ]
        }
      ]
    }
  ]
}