{
    "title": "FrontmostIfChrome3b",
    "rules": [
    {
      "description": "RightCommand + H_Reload(Chrome)",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("h", ["right_gui"]) %>,
          "to": <%= to([["w", ["right_control", "right_shift"]]]) %>,
          "conditions": [ <%= frontmost_application_if("chrome") %> ]
        }
      ]
    },
    {
      "description": "LeftAlt + A_CopyTab(Chrome)",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("a", ["left_alt"]) %>,
          "to": <%= to([["f12", ["right_shift"]]]) %>,
          "conditions": [ <%= frontmost_application_if("chrome") %> ]
        }
      ]
    },
   {
      "description": "LeftAlt + d_DeveloperTool(Chrome)",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("d", ["left_alt"]) %>,
          "to": <%= to([["i", ["right_alt", "right_gui"]]]) %>,
          "conditions": [ <%= frontmost_application_if("chrome") %> ]
        }
      ]
    },
  {
      "description": "RightAlt + H_PageSourchOutput(Chrome)",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("h", ["right_alt"]) %>,
          "to": <%= to([["u", ["right_alt", "right_gui"]]]) %>,
          "conditions": [ <%= frontmost_application_if("chrome") %> ]
        }
      ]
    },
    {
      "description": "LeftCommand + J_DownArrow-X3(Chrome)",
      "manipulators": [
        {
          "type": "basic",
           "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "left_control"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            },
            {
              "key_code": "down_arrow"
            },
            {
              "key_code": "down_arrow"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.google\\.Chrome$"
              ]
            }
          ]
        }
      ]
    },
