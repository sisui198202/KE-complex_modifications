{
  "title": "FrontmostIfbrowser",
  "rules": [
    {
      "description": "Basic Navigation Commands (Chrome)",
      "manipulators": [
        {
          "description": "J_DownArrow(browser)",
          "type": "basic",
          "from": <%= from("j", ["caps_lock"]) %>,
          "to": <%= to([["down_arrow"]]) %>,
          "conditions": [<%= frontmost_application_if("browser") %>]
        },
        {
          "description": "L_RightArrow(Chrome)",
          "type": "basic",
          "from": <%= from("l", ["caps_lock"]) %>,
          "to": <%= to([["right_arrow"]]) %>,
          "conditions": [<%= frontmost_application_if("chrome") %>]
        },
        {
          "description": "H_LeftArrow(Chrome)",
          "type": "basic",
          "from": <%= from("h", ["caps_lock"]) %>,
          "to": <%= to([["left_arrow"]]) %>,
          "conditions": [<%= frontmost_application_if("chrome") %>]
        }
      ]
    },
    {
      "description": "Window Control Commands (Chrome)",
      "manipulators": [
        {
          "description": "Fn + U_WindowLeftUp",
          "type": "basic",
          "from": <%= from("u", ["right_control"], ["caps_lock"]) %>,
          "to": <%= to([["6", "right_alt"]]) %>,
          "conditions": [<%= frontmost_application_if("chrome") %>]
        },
        {
          "description": "Fn + I_WindowRightUp",
          "type": "basic",
          "from": <%= from("i", ["right_control"], ["caps_lock"]) %>,
          "to": <%= to([["7", "right_alt"]]) %>,
          "conditions": [<%= frontmost_application_if("chrome") %>]
        },
        {
          "description": "Fn + K_WindowRightDown",
          "type": "basic",
          "from": <%= from("k", ["right_control"], ["caps_lock"]) %>,
          "to": <%= to([["9", "right_alt"]]) %>,
          "conditions": [<%= frontmost_application_if("chrome") %>]
        },
        {
          "description": "Fn + L_RightHalfWindowMove",
          "type": "basic",
          "from": <%= from("l", ["right_control"], ["caps_lock"]) %>,
          "to": <%= to([["3", ["right_alt"]]]) %>,
          "conditions": [<%= frontmost_application_if("chrome") %>]
        }
      ]
    },
    {
      "description": "Tab Management Commands (Chrome)",
      "manipulators": [
        {
          "description": "Semicolon_NextTab(Chrome)",
          "type": "basic",
          "from": <%= from("semicolon", ["caps_lock"]) %>,
          "to": <%= to([["tab", ["left_control"]]]) %>,
          "conditions": [<%= frontmost_application_if("chrome") %>]
        },
        {
          "description": "Z_PreviousTab(Chrome)",
          "type": "basic",
          "from": <%= from("z", ["caps_lock"]) %>,
          "to": <%= to([["tab", ["left_shift", "left_control"]]]) %>,
          "conditions": [<%= frontmost_application_if("chrome") %>]
        },
        {
          "description": "G_TabClose(Chrome)",
          "type": "basic",
          "from": <%= from("g", ["caps_lock"]) %>,
          "to": <%= to([["w", ["right_gui"]]]) %>,
          "conditions": [<%= frontmost_application_if("chrome") %>]
        }
      ]
    },
    {
      "description": "Zoom Commands (Chrome)",
      "manipulators": [
        {
          "description": "Slash_拡大(Chrome)",
          "type": "basic",
          "from": <%= from("slash", ["caps_lock"]) %>,
          "to": <%= to([["equal_sign", ["left_shift", "right_gui"]]]) %>,
          "conditions": [<%= frontmost_application_if("chrome") %>]
        },
        {
          "description": "B_縮小(Chrome)",
          "type": "basic",
          "from": <%= from("b", ["caps_lock"]) %>,
          "to": <%= to([["hyphen", ["left_shift", "right_gui"]]]) %>,
          "conditions": [<%= frontmost_application_if("chrome") %>]
        }
      ]
    },
    {
      "description": "Custom Chrome Commands",
      "manipulators": [
        {
          "description": "T_単語検索(Chrome)",
          "type": "basic",
          "from": <%= from("t", ["caps_lock"]) %>,
          "to": <%= to([["f", ["right_gui"]]]) %>,
          "conditions": [<%= frontmost_application_if("chrome") %>]
        },
        {
          "description": "V_Bookmark_Add(Chrome)",
          "type": "basic",
          "from": <%= from("v", ["caps_lock"]) %>,
          "to": <%= to([["d", ["right_gui"]]]) %>,
          "conditions": [<%= frontmost_application_if("chrome") %>]
        },
        {
          "description": "E_Reload(Chrome)",
          "type": "basic",
          "from": <%= from("e", ["caps_lock"]) %>,
          "to": <%= to([["w", ["right_control", "right_shift"]]]) %>,
          "conditions": [<%= frontmost_application_if("chrome") %>]
        }
      ]
    }
  ]
}
