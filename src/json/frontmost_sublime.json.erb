{
    "title": "FrontmostIfSublime2",
    "rules": [
    {
      "description": "RightCommand + H_TagCreate(sublime)",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("h", ["right_gui"]) %>,
          "to": <%= to([["w", ["left_control","right_shift"]]]) %>,
          "conditions": [ <%= frontmost_application_if("sublime") %> ]
        }
      ]
    },
    {
      "description": "LeftCommand + P_focus_side_bar(sublime)",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("p", ["left_control"]) %>,
          "to": <%= to([["p", ["left_control","right_shift"]]]) %>,
          "conditions": [ <%= frontmost_application_if("sublime") %> ]
        }
      ]
    },
   {
      "description": "LetfAlt + F_FileControl(sublime)",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("f", ["left_alt"]) %>,
          "to": <%= to([["n", ["left_control","right_gui"]]]) %>,
          "conditions": [ <%= frontmost_application_if("sublime") %> ]
        }
      ]
    }
    ]
}