{
    "title": "FrontmostIfSublime",
    "rules": [
        {
            "description": "LeftCommand + Z_RowCursolNewline(sublime)_old",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "z",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "return_or_enter",
                            "modifiers": [
                                "right_gui"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.sublimetext\\.3"
                            ]
                        }
                    ]
                }
            ]
        },
    {
      "description": "LeftCommand + Z_RowCursolNewline(sublime)",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("z", ["left_control"]) %>,
          "to": <%= to([["return_or_enter", ["right_gui"]]]) %>,
          "conditions": [ <%= frontmost_application_if("sublime") %> ]
        }
      ]
    }
    ]
}