
{
  "title": "frontmost-if-Finder",
  "rules": [
    {
      "description": "LeftCommand  + Space_Use Return as Open-Finder",
      "manipulators":
      <%=
               each_key(
                 source_keys_list: ["spacebar"],
                 from_mandatory_modifiers: ["left_control"],
                 dest_keys_list: ["o"],
                 conditions: [frontmost_application_if("finder", false)],
                 to_modifiers: ["right_command"],
                 as_json: true
               )
       %>
    },
   {
      "description": "F2_Use F2 as Rename-Finder",
      "manipulators":
      <%=
               each_key(
                 source_keys_list: ["f2"],
                 dest_keys_list: ["return_or_enter"],
                 conditions: [frontmost_application_if("finder", false)],
                 as_json: true
               )
       %>
    },
   {
      "description": "RightCommand + LeftCommand_Use Delete as Move to Trash-Finder",
      "manipulators":
      <%=
               each_key(
                 source_keys_list: ["right_command"],
                 from_mandatory_modifiers: ["left_control"],                 
                 dest_keys_list: ["delete_or_backspace"],
                 to_modifiers: ["left_command"],
                 conditions: [frontmost_application_if("finder", false)],
                 as_json: true
               )
       %>
    }       
]
}