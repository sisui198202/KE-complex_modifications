{
    "title": "FrontmostIfFinder",
    "rules": [
        {
            "description": "LeftAlt + Space_OpenFile(Finder)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": {
                            "mandatory": [
                                "left_alt"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "o",
                            "modifiers": [
                                "right_gui"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.apple\\.finder"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Enter_OpenFile(Finder)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "return_or_enter"
                    },
                    "to": [
                        {
                            "key_code": "o",
                            "modifiers": [
                                "right_command"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.apple\\.finder"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "F2_Rename(Finder)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f2"
                    },
                    "to": [
                        {
                            "key_code": "return_or_enter"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.apple\\.finder"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "RightCommand + space_FileDelete(Finder)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                      "key_code": "spacebar",
                      "modifiers": {
                        "mandatory": [
                          "right_gui"
                        ]
                      }
                    },
                    "to": [
                      {
                        "key_code": "delete_or_backspace",
                        "modifiers": [
                          "left_command"
                        ]
                      }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.apple\\.finder"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}