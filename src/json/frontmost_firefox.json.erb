{
    "title": "FrontmostIfFirefox6",
    "rules": [
    {
      "description": "E_Reload(Firefox)",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("e", ["caps_lock"]) %>,
          "to": <%= to([["r", ["right_gui"]]]) %>,
          "conditions": [ <%= frontmost_application_if("firefox") %> ]
        }
      ]
    },
    {
      "description": "LeftAlt + A_シークレットウィンドウを開く(Firefox)",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("a", ["left_alt"], ["caps_lock"]) %>,
          "to": <%= to([["2", ["right_shift", "right_gui"]]]) %>,
          "conditions": [ <%= frontmost_application_if("firefox") %> ]
        }
      ]
    },
    {
        "description": "RightAlt + A_新規ウインドウ(Firefox)",
        "manipulators": [
          {
            "type": "basic",
            "from": <%= from("a", ["right_alt"], ["caps_lock"]) %>,
            "to": <%= to([["y", ["right_control", "right_alt"]]]) %>,
            "conditions": [ <%= frontmost_application_if("firefox") %> ]
          }
        ]
    },
    {
      "description": "A_新しいタブを開く(Firefox)",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("a", ["caps_lock"]) %>,
          "to": <%= to([["n", ["right_alt", "right_gui"]]]) %>,
          "conditions": [ <%= frontmost_application_if("Firefox") %> ]
        }
      ]
    },
    {
      "description": "LeftCommand + U_戻る(Firefox)",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("u", ["left_control"]) %>,
          "to": <%= to([["left_arrow",["right_gui"]]]) %>,
          "conditions": [ <%= frontmost_application_if("firefox") %> ]
        }
      ]
    },
    {
      "description": "RightCommand + A_NewTabCreate(Firefox)",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("a", ["right_gui"]) %>,
          "to": <%= to([["n",["right_alt","right_gui"]]]) %>,
          "conditions": [ <%= frontmost_application_if("firefox") %> ]
        }
      ]
    },
    {
      "description": "RightCommand + L_ActiTabToggleOnoff(Firefox)",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("l", ["right_gui"]) %>,
          "to": <%= to([["left_arrow",["right_gui","right_alt"]]]) %>,
          "conditions": [ <%= frontmost_application_if("firefox") %> ]
        }
      ]
    }
    ]
}