{
    "title": "FrontmostIfFirefox",
    "rules": [
    {
      "description": "LeftCommand + U_Un Do(Firefox)",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("u", ["left_control"]) %>,
          "to": <%= to([["left_arrow",["right_gui"]]]) %>,
          "conditions": [ <%= frontmost_application_if("firefox") %> ]
        }
      ]
    },
    {
      "description": "RightCommand + A_NewTabCreate(Firefox)",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("a", ["right_gui"]) %>,
          "to": <%= to([["n",["right_alt","right_gui"]]]) %>,
          "conditions": [ <%= frontmost_application_if("firefox") %> ]
        }
      ]
    },
    {
      "description": "RightCommand + L_ActiTabToggleOnoff(Firefox)",
      "manipulators": [
        {
          "type": "basic",
          "from": <%= from("l", ["right_gui"]) %>,
          "to": <%= to([["left_arrow",["right_gui","right_alt"]]]) %>,
          "conditions": [ <%= frontmost_application_if("firefox") %> ]
        }
      ]
    }
    ]
}