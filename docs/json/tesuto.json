{
  "title": "TesutoCase6",
  "rules": [
    {
      "description": "Sキーを押しながらHキーを押すと左矢印に変換するという設定",
      "_comment": "Sキーを押しながらHキーを押すと左矢印に変換するという設定 ",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "vi_mode",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "vi_mode",
                "value": 0
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "vi_mode",
              "value": 1
            }
          ]
        }
      ]
    },
    {
      "description": "１秒間押し続けないとcommand-qが実行されない設定",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": [
                "command"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 1000
          },
          "to_if_held_down": [
            {
              "key_code": "q",
              "modifiers": [
                "command"
              ],
              "repeat": false
            }
          ]
        }
      ]
    },
    {
      "description": "１秒間押し続けないとaが実行されない設定",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 1000
          },
          "to_if_held_down": [
            {
              "key_code": "a",
              "repeat": false
            }
          ]
        }
      ]
    },
    {
      "description": "１秒間押し続けないとspaceが実行されない設定",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 1000
          },
          "to_if_held_down": [
            {
              "key_code": "spacebar",
              "repeat": false
            }
          ]
        }
      ]
    },
