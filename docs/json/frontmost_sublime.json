{
  "title": "FrontmostIfSublime1",
  "rules": [
    {
      "description": "TagCreate(sublime)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "right_gui"
              ]
            }
          },
          "to": [
            {
              "key_code": "w",
              "modifiers": [
                "left_control",
                "right_shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.sublimetext.3$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "focus_side_bar(sublime)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "p",
              "modifiers": [
                "left_control",
                "right_shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.sublimetext.3$"
              ]
            }
          ]
        }
      ]
    },
    {
