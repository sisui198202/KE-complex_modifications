{
  "title": "FrontmostIfSublime",
  "rules": [
    {
      "description": "LeftCommand + Z_RowCursolNewline",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "z",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "return_or_enter",
              "modifiers": [
                "right_command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.sublimetext.3$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
