{
  "title": "FrontmostIfintellij97",
  "rules": [
    {
      "description": "RightCommand + A_新規Javaクラス(intellij)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "right_gui"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "hyphen",
              "modifiers": [
                "left_control",
                "left_option"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.jetbrains.intellij.ce$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "RightCommand + T_検査(intellij)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "t",
            "modifiers": {
              "mandatory": [
                "right_gui"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "1",
              "modifiers": [
                "left_control",
                "left_option"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.jetbrains.intellij.ce$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "LeftCommand + P_選択範囲の拡大(intellij)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [
                "left_control"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "0",
              "modifiers": [
                "right_option",
                "left_shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.jetbrains.intellij.ce$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
