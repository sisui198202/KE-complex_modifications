{
  "title": "FrontmostIfPararell",
  "rules": [
    {
      "description": "LeftAlt + O(オー)_Save(Pararell)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": [
                "left_alt"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "s",
              "modifiers": [
                "left_control"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.parallels.desktop.console$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
