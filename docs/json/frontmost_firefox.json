{
  "title": "FrontmostIfFirefox6",
  "rules": [
    {
      "description": "E_Reload(Firefox)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "r",
              "modifiers": [
                "right_gui"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "org.mozilla.firefox"
              ]
            }
          ]
        }
      ]
    },
    {
