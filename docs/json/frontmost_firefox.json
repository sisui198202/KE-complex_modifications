            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "left_alt"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "2",
              "modifiers": [
                "right_shift",
                "right_gui"
