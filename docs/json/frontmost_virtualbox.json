{
  "title": "FrontmostIfVirtualbox",
  "rules": [
    {
      "description": "RightCommand + Z_0(Vitualbox)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "z",
            "modifiers": {
              "mandatory": [
                "right_gui"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "0"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org.virtualbox.app.VirtualBoxVM$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
