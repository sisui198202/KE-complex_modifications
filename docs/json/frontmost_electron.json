{
  "title": "FrontmostIfElectron99",
  "rules": [
    {
      "description": "RightCommand + H_Reload(electron)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "right_gui"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "r",
              "modifiers": [
                "right_gui"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.github.Electron$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "LeftAlt + d_DeveloperTool(electron)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": [
                "left_alt"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "l",
              "modifiers": [
                "right_alt",
                "right_gui"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.github.Electron$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
