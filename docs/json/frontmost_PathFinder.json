{
  "title": "FrontmostIfPathFinder_ver12",
  "rules": [
    {
      "description": "LeftAlt + u_PathSelection(pathfinder)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "u",
            "modifiers": {
              "mandatory": [
                "left_alt"
              ]
            }
          },
          "to": [
            {
              "key_code": "l",
              "modifiers": [
                "left_alt",
                "left_gui"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.cocoatech\\.PathFinder$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "使用しない_delete_FileDelete(pathfinder)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "delete_or_backspace"
          },
          "to": [
            {
              "key_code": "delete_or_backspace",
              "modifiers": [
                "right_gui"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.cocoatech\\.PathFinder$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "RightCommand + A_NewFileCreate(pathfinder)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "right_gui"
              ]
            }
          },
          "to": [
            {
              "key_code": "n",
              "modifiers": [
                "right_alt",
                "right_gui"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.cocoatech\\.PathFinder$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "LeftAlt + Space_OpenFile(pathfinder)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "left_alt"
              ]
            }
          },
          "to": [
            {
              "pointing_button": "button1"
            },
            {
              "pointing_button": "button1"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.cocoatech\\.PathFinder$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Enter_OpenFile(pathfinder)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "return_or_enter"
          },
          "to": [
            {
              "pointing_button": "button1"
            },
            {
              "pointing_button": "button1"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.cocoatech\\.PathFinder$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "LeftAlt + A_FolderCreate(pathfinder)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "left_alt"
              ]
            }
          },
          "to": [
            {
              "key_code": "n",
              "modifiers": [
                "right_shift",
                "right_gui"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.cocoatech\\.PathFinder$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
