{
  "title": "Frontmostvirtual_machine83",
  "rules": [
    {
      "description": "複数A",
      "manipulators": [
        {
          "description": "LeftCommand + W_CurrentCursol-EndRowSelect(VirtualMachine)",
          "type": "basic",
          "from": {
            "key_code": "w",
            "modifiers": {
              "mandatory": [
                "left_control"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "equal_sign",
              "modifiers": "left_option"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.vmware\\.fusion$",
                "^com\\.vmware\\.horizon$",
                "^com\\.vmware\\.view$",
                "^com\\.parallels\\.desktop$",
                "^com\\.parallels\\.vm$",
                "^com\\.parallels\\.desktop\\.console$",
                "^org\\.virtualbox\\.app\\.VirtualBoxVM$",
                "^com\\.vmware\\.proxyApp\\.",
                "^com\\.parallels\\.winapp\\."
              ]
            }
          ]
        },
        {
          "description": "RightCommand + ._MaxWindows(VirtualMachine)",
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "mandatory": [
                "right_gui"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "1",
              "modifiers": "left_option"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.vmware\\.fusion$",
                "^com\\.vmware\\.horizon$",
                "^com\\.vmware\\.view$",
                "^com\\.parallels\\.desktop$",
                "^com\\.parallels\\.vm$",
                "^com\\.parallels\\.desktop\\.console$",
                "^org\\.virtualbox\\.app\\.VirtualBoxVM$",
                "^com\\.vmware\\.proxyApp\\.",
                "^com\\.parallels\\.winapp\\."
              ]
            }
          ]
        },
        {
          "description": "LeftCommand、 英語モードへ",
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "f12",
              "modifiers": [
                "left_control"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.vmware.fusion$",
                "^com.vmware.horizon$",
                "^com.vmware.view$",
                "^com.parallels.desktop$",
                "^com.parallels.vm$",
                "^com.parallels.desktop.console$",
                "^org.virtualbox.app.VirtualBoxVM$",
                "^com.vmware.proxyApp.",
                "^com.parallels.winapp."
              ]
            }
          ]
        },
        {
          "description": "RightCommand、 日本語モードへ",
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_command",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "f9",
              "modifiers": [
                "left_control"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.vmware.fusion$",
                "^com.vmware.horizon$",
                "^com.vmware.view$",
                "^com.parallels.desktop$",
                "^com.parallels.vm$",
                "^com.parallels.desktop.console$",
                "^org.virtualbox.app.VirtualBoxVM$",
                "^com.vmware.proxyApp.",
                "^com.parallels.winapp."
              ]
            }
          ]
        }
      ]
    }
  ]
}
