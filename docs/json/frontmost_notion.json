{
  "title": "FrontmostIfNotion1",
  "rules": [
    {
      "description": "RightOption + A_新しいNotionウィンドウを開く(notion)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "right_option"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "n",
              "modifiers": [
                "left_shift",
                "right_gui"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^notion.id$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
